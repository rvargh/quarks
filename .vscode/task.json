{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${workspaceFolder}/build/bin/quarks"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "compiler: /usr/bin/clang++"
        }
    ]
}